---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { DEVELOPER_NAME } from "../consts";

import {
  HERO_HEADLINE_1,
  HERO_HEADLINE_2,
  HERO_IMAGE,
  HERO_DESCRIPTION,
} from "../consts";
---

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        <span class="headline-primary"
          >{HERO_HEADLINE_1}
          <span style="color: var(--sky);">{`[${DEVELOPER_NAME}]`}</span>
        </span>
        <span class="headline-accent">{HERO_HEADLINE_2}</span>
      </h1>
      <p class="hero-description">{HERO_DESCRIPTION}</p>
      <div class="hero-cta">
        <a href="#projects" class="cta-button cta-primary">
          Proyectos
          <Icon name="heroicons:arrow-long-right" size={20} />
        </a>
        <a href="#contact" class="cta-button cta-secondary">
          Contactar
          <Icon name="lucide:send-horizontal" size={20} />
        </a>
      </div>
    </div>
    <div class="hero-image-container">
      <Image
        src={HERO_IMAGE}
        class="hero-image"
        alt="Hero Image"
        loading="eager"
        fetchpriority="high"
        width={580}
        height={720}
      />
    </div>
  </div>
</section>

<style>
  .hero-section {
    padding: 52px 24px;
    background: linear-gradient(135deg, var(--crust) 0%, var(--base) 100%);
    position: relative;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(183, 50, 63, 0.1) 0%,
      transparent 70%
    );
    border-radius: 50%;
    pointer-events: none;
  }

  .hero-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    gap: 2rem;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    text-align: left;
  }

  .hero-title {
    margin: 0 0 24px 0;
    line-height: 1.1;
    max-width: 30rem;
  }

  .headline-primary {
    display: block;
    color: var(--text);
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .headline-accent {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--accent) 0%, #e0e6f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--subtext);
    margin-bottom: 48px;
    max-width: 600px;
    line-height: 1.8;
    text-wrap: pretty;
  }

  .hero-image-container {
    position: relative;
  }

  .hero-image {
    aspect-ratio: 4 / 5;
    max-height: 600px;
    width: fit-content;
    object-fit: cover;
    border: 1px solid var(--accent);
    box-shadow: 0 0 20px var(--accent-dark);
  }

  .hero-cta {
    display: flex;
    gap: 16px;
    justify-content: start;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 32px;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }

  .cta-primary {
    background-color: var(--accent);
    color: #1e1e2e;
    border: 2px solid var(--accent);
    font-weight: 700;
  }

  .cta-primary:hover {
    background-color: var(--accent-dark);
    border-color: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(var(--sky-rgb), 0.2);

    & svg {
      transform: translateX(4px);
      transition: all 0.3s ease-in-out;
    }
  }

  .cta-secondary {
    background-color: transparent;
    color: var(--accent);
    border: 2px solid var(--accent);
  }

  .cta-secondary:hover {
    background-color: var(--accent);
    color: #1e1e2e;
    font-weight: 700;
    transform: translateY(-2px);
    box-shadow: 0 3px 10px rgba(var(--sky-rgb), 0.2);

    & svg {
      transform: rotate(-25deg);
      transition: all 0.3s ease-in-out;
    }
  }

  @media (max-width: 1024px) {
    .hero-section {
      padding: 80px 24px;
      min-height: 70vh;
    }

    .headline-primary,
    .headline-accent {
      font-size: 3rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-container {
      display: flex;
      flex-direction: column-reverse;
      align-items: center;
      justify-content: center;
    }

    .hero-image {
      aspect-ratio: 1/1;
      object-position: top;
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      padding: 60px 24px;
      min-height: auto;
    }

    .headline-primary,
    .headline-accent {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
      margin-bottom: 32px;
    }

    .hero-cta {
      flex-direction: column;
    }

    .cta-button {
      width: 100%;
    }
  }
</style>
