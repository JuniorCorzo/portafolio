---
import { CONTACT_DETAILS } from "../consts";
import { Icon } from "astro-icon/components";

const { email, social, ubication } = CONTACT_DETAILS;
---

<section class="contact-section" id="contact">
  <div class="contact-container">
    <h2 class="section-title">Contáctame</h2>
    <p class="contact-subtitle">
      Me encantaría escuchar tus ideas y proyectos. Siéntete libre de alcanzarme
      por cualquier medio.
    </p>

    <div class="contact-content">
      <form
        class="contact-form"
        action="https://formspree.io/f/xzdbgjqz"
        method="POST"
      >
        <div class="form-group">
          <label for="name">
            Nombre
            <input
              type="text"
              name="name"
              placeholder="Angel Corzo"
              required
              class="form-input"
            />
          </label>
          <label>
            Correo
            <input
              type="email"
              name="email"
              placeholder="angelcorzo@example.com"
              required
              class="form-input"
            />
          </label>
        </div>

        <div class="form-group">
          <label>
            Mensaje
            <textarea
              class="form-textarea"
              name="message"
              placeholder="Hablame sobre tu proyecto..."
              rows="6"
              required></textarea>
          </label>
        </div>

        <button type="submit" class="submit-button">
          Enviar Mensaje
          <Icon name="lucide:send-horizontal" size="20" />
        </button>
      </form>

      <div class="contact-details-section">
        <h3 class="contact-details-title">Detalles de Contacto</h3>
        <div class="contact-details-item">
          <div class="contact-details-item-icon" title={email.title}>
            <Icon name={email.icon} size="20" />
          </div>
          <div class="contact-details-item-content">
            <span>{email.title}</span>
            <div>
              <a href={`mailto:${email.mail}`}>
                <span>
                  {email.mail}
                </span>
              </a>
            </div>
          </div>
        </div>
        <div class="contact-details-item">
          <div class="contact-details-item-icon" title={ubication.title}>
            <Icon name={ubication.icon} size="20" />
          </div>
          <div class="contact-details-item-content">
            <span>{ubication.title}</span>
            <div>
              {ubication.text}
            </div>
          </div>
        </div>
        <div class="contact-details-item">
          <div class="contact-details-item-icon" title={social.title}>
            <Icon name={social.icon} size="20" />
          </div>
          <div class="contact-details-item-content">
            <span>{social.title}</span>
            <div>
              {
                social.content.map(({ icon, url, name }) => (
                  <a
                    href={url}
                    target="_blank"
                    rel="noopener noreferrer"
                    title={name}
                  >
                    <Icon name={icon} class="contact-details-icon" size={24} />
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: 80px 24px;
    background: var(--crust);
    border-top: 1px solid var(--overlay0);
  }

  .contact-container {
    max-width: 1128px;
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    margin-bottom: 16px;
    color: var(--text);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .contact-subtitle {
    text-align: center;
    color: var(--subtext);
    font-size: 1.1rem;
    margin-bottom: 48px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .contact-form {
    background-color: rgba(var(--base-rgb), 0.7);
    backdrop-filter: blur(12px);
    display: flex;
    padding: 2rem 1.5rem;
    border: 1px solid var(--overlay1);
    border-radius: 6px;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    position: relative;
    gap: 12px;

    & label {
      display: flex;
      flex-direction: column;
      gap: 4px;
      width: 100%;
      font-size: 1rem;
      font-weight: 700;
      color: var(--text);
    }
  }

  .form-input,
  .form-textarea {
    width: 100%;
    background: var(--crust);
    border: 1px solid var(--crust);
    border-radius: 4px;
    color: var(--text);
    padding: 12px 12px;
    margin-left: 2px;
    font-size: 1rem;
    transition: all 0.3s ease-in-out;
    font-family: inherit;
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: rgba(var(--subtext-rgb), 0.5);
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--sky);
    color: var(--accent);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    font-family: inherit;
  }

  .submit-button {
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--accent);
    color: #1e1e2e;
    border: 2px solid var(--accent);
    padding: 14px 20px;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    align-self: flex-start;
  }

  .submit-button:hover {
    background: var(--accent-dark);
    border-color: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(186, 194, 222, 0.25);

    & svg {
      transform: rotate(-25deg);
      transition: all 0.3s ease-in-out;
    }
  }

  .submit-button:active {
    transform: translateY(0);
  }

  .contact-details-section {
    background-color: rgba(var(--base-rgb), 0.6);
    backdrop-filter: blur(30px);
    display: flex;
    padding: 16px 32px;
    flex-direction: column;
    align-items: start;
    border: 1px solid var(--accent);
    border-radius: 8px;

    gap: 1rem;
  }

  .contact-details-title {
    color: var(--text);
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
  }

  .contact-details-item {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }

  .contact-details-item:hover {
    color: var(--sky);
    transform: translateY(-4px);
  }

  .contact-details-item-icon {
    background: rgba(var(--sky-rgb), 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 6px;
    color: var(--sky);
    transition: all 0.3s ease-in-out;
    text-decoration: none;
  }

  .contact-details-item-content {
    display: flex;
    flex-direction: column;
    align-items: start;
    font-size: 0.9rem;

    & span {
      color: rgba(var(--text-rgb), 0.8);
    }

    & div {
      display: flex;
      gap: 12px;
      font-size: 1.05rem;

      & a {
        width: fit-content;
        height: 24px;
        color: var(--text);

        & :hover {
          color: var(--sky);
        }

        & svg {
          margin-top: 3px;
        }
      }
    }
  }

  @media (max-width: 1024px) {
    .contact-section {
      padding: 60px 24px;
    }

    .section-title {
      font-size: 2rem;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  @media (max-width: 640px) {
    .contact-section {
      padding: 40px 24px;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .contact-subtitle {
      font-size: 1rem;
      margin-bottom: 32px;
    }

    .contact-content {
      gap: 32px;
    }

    .form-input,
    .form-textarea {
      padding: 10px 0;
    }

    .submit-button {
      width: 100%;
    }

    .contact-details-links {
      gap: 16px;
    }

    .contact-details-link {
      width: 44px;
      height: 44px;
    }

    .contact-details-icon {
      width: 20px;
      height: 20px;
    }
  }
</style>
