---
import { EXPERIENCE } from '../consts';
---

<section class="experience-section">
	<div class="experience-container">
		<h2 class="section-title">Mi Experiencia</h2>
		<div class="timeline">
			{EXPERIENCE.map((exp, index) => (
				<div class="timeline-item">
					<div class="timeline-marker"></div>
					<div class="timeline-content">
						<div class="experience-period">{exp.period}</div>
						<h3 class="experience-title">{exp.title}</h3>
						<div class="experience-company">{exp.company}</div>
						<ul class="experience-highlights">
							{exp.highlights.map((highlight) => (
								<li class="highlight-item">{highlight}</li>
							))}
						</ul>
						<div class="experience-metric">{exp.metric}</div>
						<div class="tech-stack">
							{exp.tech.map((tech) => (
								<span class="tech-chip">{tech}</span>
							))}
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.experience-section {
		padding: 80px 24px;
		background: var(--crust);
		border-top: 1px solid var(--overlay0);
	}

	.experience-container {
		max-width: 1000px;
		margin: 0 auto;
	}

	.section-title {
		text-align: center;
		margin-bottom: 60px;
		color: var(--text);
		font-size: 2.5rem;
		font-weight: 700;
	}

	.timeline {
		position: relative;
		padding: 20px 0;
	}

	.timeline::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 2px;
		background: linear-gradient(180deg, var(--maroon) 0%, var(--overlay0) 100%);
		transform: translateX(-1px);
	}

	.timeline-item {
		position: relative;
		margin-bottom: 40px;
		padding-left: 60px;
	}

	.timeline-item:last-child {
		margin-bottom: 0;
	}

	.timeline-marker {
		position: absolute;
		left: -10px;
		top: 8px;
		width: 20px;
		height: 20px;
		background: var(--maroon);
		border-radius: 50%;
		border: 3px solid var(--base);
		transition: all 0.3s ease-in-out;
	}

	.timeline-item:hover .timeline-marker {
		width: 28px;
		height: 28px;
		left: -14px;
		top: 4px;
		background: var(--sky);
		box-shadow: 0 0 20px rgba(137, 220, 235, 0.5);
	}

	.timeline-content {
		background: var(--surface1);
		padding: 28px;
		border-radius: 8px;
		border-left: 3px solid var(--maroon);
		transition: all 0.3s ease-in-out;
	}

	.timeline-item:hover .timeline-content {
		background: var(--surface2);
		box-shadow: 0 8px 24px rgba(183, 50, 63, 0.15);
	}

	.experience-period {
		color: var(--subtext);
		font-size: 0.9rem;
		font-weight: 500;
		margin-bottom: 8px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.experience-title {
		color: var(--text);
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0 0 8px 0;
	}

	.experience-company {
		color: var(--sky);
		font-size: 1.1rem;
		margin-bottom: 16px;
		font-weight: 500;
	}

	.experience-highlights {
		list-style: none;
		padding: 0;
		margin: 16px 0;
	}

	.highlight-item {
		color: var(--subtext);
		font-size: 0.95rem;
		line-height: 1.8;
		margin-bottom: 10px;
		padding-left: 20px;
		position: relative;
	}

	.highlight-item::before {
		content: 'âœ“';
		position: absolute;
		left: 0;
		color: var(--sky);
		font-weight: 700;
	}

	.experience-metric {
		background: rgba(183, 50, 63, 0.1);
		color: var(--maroon);
		padding: 12px 16px;
		border-radius: 6px;
		margin: 16px 0;
		font-weight: 600;
		font-size: 0.95rem;
		border-left: 3px solid var(--maroon);
	}

	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		margin-top: 16px;
	}

	.tech-chip {
		display: inline-block;
		background: var(--base);
		color: var(--sky);
		padding: 6px 12px;
		border-radius: 16px;
		font-size: 0.8rem;
		font-weight: 500;
		border: 1px solid var(--overlay0);
		transition: all 0.3s ease-in-out;
	}

	.tech-chip:hover {
		background: var(--maroon);
		color: var(--text);
		border-color: var(--maroon);
	}

	@media (max-width: 768px) {
		.experience-section {
			padding: 60px 24px;
		}

		.section-title {
			font-size: 2rem;
			margin-bottom: 40px;
		}

		.timeline::before {
			left: -12px;
		}

		.timeline-item {
			padding-left: 40px;
		}

		.timeline-marker {
			left: -19px;
		}

		.timeline-content {
			padding: 20px;
		}

		.experience-title {
			font-size: 1.25rem;
		}
	}

	@media (max-width: 640px) {
		.experience-section {
			padding: 40px 24px;
		}

		.section-title {
			font-size: 1.5rem;
		}

		.timeline-item {
			padding-left: 36px;
			margin-bottom: 32px;
		}

		.timeline::before {
			left: -16px;
		}

		.timeline-marker {
			left: -22px;
			width: 16px;
			height: 16px;
			top: 10px;
		}

		.timeline-content {
			padding: 16px;
			border-left-width: 2px;
		}

		.experience-period {
			font-size: 0.85rem;
		}

		.experience-title {
			font-size: 1.125rem;
			margin-bottom: 4px;
		}

		.experience-company {
			font-size: 1rem;
		}

		.highlight-item {
			font-size: 0.9rem;
		}

		.tech-chip {
			font-size: 0.75rem;
			padding: 4px 10px;
		}
	}
</style>
