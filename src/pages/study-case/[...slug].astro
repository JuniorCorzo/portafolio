---
import { type CollectionEntry, getCollection } from "astro:content";
import StudyCasePost from "@/layouts/StudyCasePost.astro";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("study-case");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"study-case">;

const post = Astro.props;
const { Content } = await render(post);
---

<StudyCasePost {...post.data}>
  <Content />
</StudyCasePost>
